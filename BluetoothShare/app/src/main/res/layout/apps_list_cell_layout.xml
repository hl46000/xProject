<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

	<CheckBox
		android:id="@+id/apps_cell_check_box"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:focusable="false"
		android:focusableInTouchMode="false"
		android:visibility="gone"
		android:text="" />

	<ImageView 
	    android:id="@+id/apps_cell_icon"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_margin="5dp"
	    android:contentDescription="@string/app_name"
	    />
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"	    
	    android:orientation="vertical" >
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="top"
	        android:orientation="horizontal" >
	    
		    <TextView
		        android:id="@+id/apps_cell_app_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:ellipsize="marquee"
		        android:singleLine="true"
		        android:text="APP NAME LONG"
		        android:textAppearance="?android:attr/textAppearanceLarge" />

		    <TextView
		        android:id="@+id/apps_cell_version_name"
		        android:layout_width="50dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"		        
		        android:ellipsize="marquee"		        
		        android:singleLine="true"
		        android:text="1"
		        android:textAppearance="?android:attr/textAppearanceSmall" />
		    
		</LinearLayout>
	    <TextView 
	        android:id="@+id/apps_cell_package_name"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:singleLine="true"
	    	android:text="com.sample.package"
	        android:ellipsize="marquee" />	    	
	</LinearLayout>
</LinearLayout>
