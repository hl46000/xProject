<AnchorPane prefHeight="376.0" prefWidth="636.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="android.touch.macro.v2.view.deviceController">
   <children>
      <VBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="376.0" prefWidth="600.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane prefHeight="50.0" prefWidth="590.0">
               <left>
                  <Label prefHeight="15.0" text="Android SDK Path : " BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" />
                     </BorderPane.margin></Label>
               </left>
               <center>
                  <TextField fx:id="txAdbPath" editable="false" prefHeight="23.0" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" />
                     </BorderPane.margin></TextField>
               </center>
               <right>
                  <Button fx:id="ID_BTN_CHANGE_SDK_PATH" mnemonicParsing="false" onAction="#event_handle_action" prefHeight="23.0" prefWidth="43.0" text="..." textAlignment="CENTER" wrapText="true" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="5.0" />
                     </BorderPane.margin>
                  </Button>
               </right>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </BorderPane>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="ID_BTN_ALL_DEVICE_COMMAND" mnemonicParsing="false" onMouseClicked="#event_handle_mouse" text="ALL Device 명령어">
                     <contextMenu>
                        <ContextMenu fx:id="cmApkCommand">
                           <items>
                              <Menu mnemonicParsing="false" text="APK Commands">
                                <items>
                                    <CheckMenuItem fx:id="ckMenuItem_apkCmdUninstall" mnemonicParsing="false" onAction="#event_handle_action" selected="true" text="Uninstall" />
                                    <RadioMenuItem fx:id="roMenuItem_apkCmdInstall" mnemonicParsing="false" selected="true" text="Install">
                                       <toggleGroup>
                                          <ToggleGroup fx:id="tgApkInstallUpdate" />
                                       </toggleGroup>
                                    </RadioMenuItem>
                                    <RadioMenuItem fx:id="roMenuItem_apkCmdUpdate" mnemonicParsing="false" text="Update" toggleGroup="$tgApkInstallUpdate" />
                                    <CheckMenuItem fx:id="ckMenuItem_apkCmdExcute" mnemonicParsing="false" onAction="#event_handle_action" selected="true" text="Excute" />
                                    <SeparatorMenuItem mnemonicParsing="false" />
                                    <MenuItem fx:id="ID_BTN_ALL_DEVICE_COMMAND_ACTION" mnemonicParsing="false" onAction="#event_handle_action" text="Action" />
                                </items>
                              </Menu>
                              <Menu mnemonicParsing="false" text="APP Command">
                                <items>
                                  <MenuItem fx:id="ID_MENU_ALL_DEVICE_APP_EXCUTE" mnemonicParsing="false" onAction="#event_handle_action" text="Excute" />
                                    <MenuItem fx:id="ID_MENU_ALL_DEVICE_APP_TERMINATE" mnemonicParsing="false" onAction="#event_handle_action" text="Terminate" />
                                    <MenuItem fx:id="ID_MENU_ALL_DEVICE_APP_RE_EXCUTE" mnemonicParsing="false" onAction="#event_handle_action" text="Re-Excute" />
                                </items>
                              </Menu>
                              <SeparatorMenuItem mnemonicParsing="false" />
                              <MenuItem fx:id="ID_MENU_ALL_DEVICE_DISPLAY_ON" mnemonicParsing="false" onAction="#event_handle_action" text="Display ON" />
                              <MenuItem fx:id="ID_MENU_ALL_DEVICE_DISPLAY_OFF" mnemonicParsing="false" onAction="#event_handle_action" text="Display OFF" />
                           </items>
                        </ContextMenu>
                     </contextMenu>
                  </Button>
                  <Button fx:id="ID_BUTTON_REFRESH_DEVICE_INFO" mnemonicParsing="false" onAction="#event_handle_action" text="장비 리스트 갱신">
                     <tooltip>
                        <Tooltip text="ADB로 연결된 디바이스 정보를 갱신합니다." />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tvDeviceInfo" onMouseClicked="#event_handle_mouse" prefWidth="700.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn maxWidth="30.0" minWidth="30.0" prefWidth="30.0" sortable="false">
                     <graphic>
                        <CheckBox fx:id="ID_CHECKBOX_SELECT_ALL_DEVICE" mnemonicParsing="false" onAction="#event_handle_action">
                           <tooltip>
                              <Tooltip text="디바이스를 모두 선택하거나 모두 해제합니다." />
                           </tooltip>
                        </CheckBox>
                     </graphic>
                  </TableColumn>
                  <TableColumn editable="false" maxWidth="183.0" minWidth="150.0" prefWidth="135.0" sortable="false" text="모델명" />
                  <TableColumn editable="false" maxWidth="200.0" minWidth="150.0" prefWidth="118.0" sortable="false" text="시리얼번호" />
                  <TableColumn editable="false" maxWidth="151.0" minWidth="84.0" prefWidth="151.0" sortable="false" text="Android 버전" />
                  <TableColumn editable="false" maxWidth="80.0" minWidth="50.0" prefWidth="40.0" sortable="false" text="Display" />
                  <TableColumn maxWidth="80.0" prefWidth="75.0" text="Battery" />
                  <TableColumn editable="false" maxWidth="110.0" minWidth="110.0" prefWidth="107.0" sortable="false" text="연결상태" />
               </columns>
               <contextMenu>
                  <ContextMenu fx:id="cmDeviceMenu">
                    <items>
                      <MenuItem fx:id="ID_MENU_APK_INSTALL" mnemonicParsing="false" onAction="#event_handle_action" text="APK Install" />
                        <MenuItem fx:id="ID_MENU_APK_UNINSTALL" mnemonicParsing="false" onAction="#event_handle_action" text="APK Uninstall" />
                        <MenuItem fx:id="ID_MENU_APK_UPDATE" mnemonicParsing="false" onAction="#event_handle_action" text="APK Update" />
                        <MenuItem fx:id="ID_MENU_APK_REINSTALL" mnemonicParsing="false" onAction="#event_handle_action" text="APK Reinstall" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="ID_MENU_APK_EXCUTE" mnemonicParsing="false" onAction="#event_handle_action" text="APK Excute" />
                        <MenuItem fx:id="ID_MENU_APK_TERMINATE" mnemonicParsing="false" onAction="#event_handle_action" text="APK Terminate" />
                        <MenuItem fx:id="ID_MENU_APK_RE_EXCUTE" mnemonicParsing="false" onAction="#event_handle_action" text="APK Re-Excute" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem disable="true" mnemonicParsing="false" text="APK Extraction" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="ID_MENU_DISPLAY_ON" mnemonicParsing="false" onAction="#event_handle_action" text="Display ON" />
                        <MenuItem fx:id="ID_MENU_DISPLAY_OFF" mnemonicParsing="false" onAction="#event_handle_action" text="Display OFF" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </TableView>
         </children>
      </VBox>
   </children>
</AnchorPane>
